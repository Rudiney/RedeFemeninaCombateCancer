<div id="crud_index">

	<div id="lista">
		
		<div id="lista_header" class="section_header">
			<%= link_to(image_tag('botoes/add.png'), new_voluntaria_path, class: '', remote: true, style: 'float:right') %>
			<h2 class="titulo"><%= Voluntaria.model_names[:human_plural] %></h2>
			<%= filtra_html('#indice .item', watermark: t('crud.pesquisa')) %>
		</div>
		
		<ul id="indice">
			<li class="divisao"><%= t('.nao_atuantes') %></li>
				<% @voluntarias.nao_atuante.each do |v| %>
				 <li id='<%= v.id %>' class='item pode_selecionar nao_atuante'><%= v.nome %></li>
				<% end %>
			
			<li class="divisao"><%= t('.atuantes') %></li>
				<% @voluntarias.atuante.each do |v| %>
				 <li id='<%= v.id %>' class='item pode_selecionar atuante'><%= v.nome %></li>
				<% end %>
		</ul>
	</div>

	<div id="direita" class="resumos">
		<%= render(partial: 'resumo', collection: @voluntarias, as: :voluntaria) %>
		<div id='exibe_form' class='resumo'></div>
	</div>
</div>
	
<%= javascript_tag("Crud.exibeResumo({id: #{params[:selecionar] || @voluntarias.first.id}});") if @voluntarias.any? %>
