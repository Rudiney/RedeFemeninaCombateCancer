<div id="crud_index">

	<div id="lista">
		
		<div id="lista_header" class="section_header">
			<%= link_to(image_tag('botoes/add.png'),new_tipo_voluntaria_path, remote: true, style: 'float: right') %>
			<h2 class="titulo"><%= TipoVoluntaria.model_names[:human_plural] %></h2>
			<%= filtra_html('#indice .item', watermark: t('crud.pesquisa')) %>
		</div>
		<ul id="indice">
			<% @tipos_voluntarias.each do |tv| %>
				<li id='<%= tv.id %>' class='item tres_pontinhos pode_selecionar'>
					<%= tv.nome %>
				</li>
			<% end %>
		</ul>
	</div>
	
	<div id="direita" class="resumos">
		<%= render(partial: 'resumo', collection: @tipos_voluntarias, as: :tv) %>
		<div id="exibe_form" class="resumo"></div>
	</div>
</div>

<%= javascript_tag("Crud.exibeResumo({id: #{params[:selecionar] || @tipos_voluntarias.first.id}});") if @tipos_voluntarias.any? %>

