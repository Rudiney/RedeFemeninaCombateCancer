<div id="crud_index">

	<div id="lista">
		
		<div id="lista_header" class="section_header">
			<%= link_to(image_tag('botoes/add.png'),new_nivel_escolaridade_path, remote: true, style: 'float: right') %>
			<h2 class="titulo"><%= NivelEscolaridade.model_names[:human_plural] %></h2>
			<%= filtra_html('#indice .item', watermark: t('crud.pesquisa')) %>
		</div>
		<ul id="indice">
			<% @niveis_escolaridade.each do |ne| %>
				<li id='<%= ne.id %>' class='item pode_selecionar'>
					<%= ne.nome %>
				</li>
			<% end %>
		</ul>
	</div>
	
	<div id="direita" class="resumos">
		<%= render(partial: 'resumo', collection: @niveis_escolaridade, as: :nivel_escolaridade) %>
		<div id="exibe_form" class="resumo"></div>
	</div>
</div>

<%= javascript_tag("Crud.exibeResumo({id: #{params[:selecionar] || @niveis_escolaridade.first.id}});") if @niveis_escolaridade.any? %>

