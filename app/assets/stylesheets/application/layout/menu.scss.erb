@import 'helpers';

#corpo #menu{
	position: absolute;
	top: $altura_header+2px; bottom: 0px; left:0px;
	width: 12%;
	
	min-width: 5%;
	background-color: white;
	font-size:80%;
	border-right: 1px solid #999;
	overflow: auto;
	
	h2{
		font-size: 11pt;
		padding: 2px;
	}
	
	fieldset{
		margin: 5px 0px;
		padding: 2px 0px 2px 0px;
		
		legend{
			color: #474748;
			padding: 0px 0px 3px 1px;
			font-weight: bold;
			background-repeat: no-repeat;	
			background-position: 1px 0px;
		}
	}
	
	ul{
		list-style-type:none;
		padding-left: 0px;
		
		li{
			padding: 2px;
			padding-left: 5px;
			
			a{
				color: black;
				text-decoration:none;
				display: block;
			}
		}
	}
}

#menu li#aniversariantes{
		
	&[festa_hoje=true]{
		a{color: blue}
	}
}