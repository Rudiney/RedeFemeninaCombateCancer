@import "helpers";

input.filtra_html{
	
	height: 20px;
	border: 1px solid #999;
	padding-left: 20px;
	background-image: url('<%= image_path('lupa.png') %>');	
	background-repeat: no-repeat;
	background-position: 3px 3px;
	background-size: 13px 13px;
	@include borda_redonda(10px);
	@include box_sizing_border_box();
	width: 95%;
	margin: 2px auto 4px auto;
	display: block;
	
	@include duas_sombras(0px 1px 1px rgba(0,0,0,0.3) inset, 0px 1px 1px rgba(255,255,255,0.3));
}